<%- include('header') -%>
    <%- include('nav') -%>
        <aside class="right-side">
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <section class="panel">
                            <header class="panel-heading">
                                添加文章
                            </header>
                            <div class="panel-body">
                                <form class="form-horizontal tasi-form" method="post">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">标题</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="title">
                                        </div>
                                    </div><!--
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">推荐属性</label>
                                        <div class="col-sm-10">
                                            <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" class="attribute" value="热点信息" name="attribute">[H:热点信息]
                                                    </label>
                                                    <label>
                                                        <input type="checkbox" class="attribute" value="轮播图" name="attribute">[P：轮播图]
                                                    </label>
                                                    <label>
                                                        <input type="checkbox" class="attribute" value="推荐" name="attribute">[R:推荐]
                                                    </label>
                                            </div>
                                        </div>
                                    </div>-->
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">作者</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="author" class="form-control round-input">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">分类</label>
                                        <div class="col-sm-10">
                                                <select name="type" class="form-control input-sm">
                                                    <!-- 自定义一个格式：-1表示用户没有选择文章类型-->
                                                    <option value="-1">请选择文章类型</option>
                                                    <% for(var i = 0;i < type.length;i++){ %>
                                                    <option value="<%= type[i].id %>"><%= type[i].typename %></option>
                                                    <% } %>
                                                </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <!--访客浏览人数-->
                                        <label class="col-sm-2 col-sm-2 control-label">阅读人数</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" name="read" type="text" value="0" placeholder="阅读人数，可不填">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <!--点赞-->
                                        <label class="col-sm-2 col-sm-2 control-label">点赞</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" name="support" type="text" value="0" placeholder="点赞，可不填">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">Tag标签</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="tag" placeholder="placeholder">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">文章内容</label>
                                        <div class="col-sm-10">
                                            <textarea class="form-control" name="content" rows="10"></textarea>
                                        </div>
                                    </div>
                                    <input type="hidden" name="username" value="<%= userInfos.name%>">
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button type="submit" class="btn btn-danger">确定提交</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>

            </section>
            <!-- /.content -->
        </aside>
        <%- include('footer') -%>